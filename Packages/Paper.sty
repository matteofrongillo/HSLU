\newcommand{\capeq}[3]{%
    \refstepcounter{myequation}%
    \begin{equation*}
        #1
    \end{equation*}
    \label{#2}%
    \begin{center}
        \vspace*{-.4cm}
        \noindent{Equation \themyequation:} #3
    \end{center}
